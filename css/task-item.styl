@import "mixin.styl"
@import "vars.styl"

.task-item__view {
  border-bottom: $item_border;
  display: flex;
  align-items: center;

  &:hover {
    background-color: colors[5];
  }

  &:hover
  .task-item__status:not(:checked)
  + .task-item__status-label {
    border-color: colors[1];
  }

  &:hover .task-item__delete {
    opacity: 1;
  }
}

.task-item__status-label {
  elem_size(40px,40px);
  box-sizing: border-box;
  margin: 10px 10px 10px 10px;
  border: $item_border;
  border-radius: 50%;
  background-color: white;
  flex-shrink: 0;
}

.task-item__status {
  position: absolute;
  elem_size(60px, 60px);
  opacity: 0;
  margin: 0 0 10px 0;


  &:checked + .task-item__status-label {
    background: url("../image/completed.svg") no-repeat center center;
    border-color: colors[0];
  }

  &:checked ~ .task-item__text{
    color: colors[1];
    text-decoration: line-through;
  }

  &:focus + .task-item__status-label {
    border-color: colors[1];
  }
}

.task-item__text {
  word-break: break-word;
  text-overflow: clip;
  font-weight: 100;
  font-size: 25px;
  padding: 5px 0 5px 0;
  width: 520px;
}

.task-item__delete {
  background: url("../image/close.svg") no-repeat center center;
  text-indent: -9999px;
  white-space: nowrap;
  border: none;
  elem_size(50px, 50px);
  margin-right: 10px;
  opacity: 0;

  &:focus {
    opacity: 1;
  }
}